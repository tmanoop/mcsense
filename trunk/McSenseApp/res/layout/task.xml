<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
  xmlns:android="http://schemas.android.com/apk/res/android"
  android:layout_width="match_parent"
  android:layout_height="match_parent">
    <TableLayout android:layout_height="match_parent" android:id="@+id/tableLayout1" android:layout_width="match_parent">
        
            <LinearLayout android:paddingTop="2dp" android:orientation="horizontal" android:id="@+id/taskInfoLayout" android:paddingBottom="2dp" android:background="@color/gray" android:gravity="left|top" android:layout_height="wrap_content" android:layout_width="fill_parent">
                <LinearLayout android:layout_gravity="left" android:orientation="horizontal" android:id="@+id/taskInfoLayout2" android:gravity="left|center_vertical" android:layout_height="wrap_content" android:layout_width="wrap_content">
                    <ImageButton android:id="@+id/imgbtn1" android:background="@drawable/ic_launcher" android:layout_height="32dp" android:layout_width="32dp"></ImageButton>
                    <TextView android:textStyle="bold" android:gravity="center_vertical" android:id="@+id/txtTest" android:textSize="15sp" android:paddingLeft="5dp" android:textColor="@color/black" android:layout_height="fill_parent" android:layout_width="fill_parent" android:text="Task Details"></TextView>
                </LinearLayout>
            </LinearLayout>
            <RelativeLayout android:id="@+id/relativeLayout5" android:layout_width="wrap_content" android:layout_height="wrap_content">
                 <TextView android:id="@+id/clientPayTextView" android:layout_height="wrap_content" android:layout_width="wrap_content" android:text="Complete below task and earn: "></TextView>
                 <TextView android:layout_height="wrap_content" android:layout_width="wrap_content" android:id="@+id/clientPay" android:text="" android:layout_alignParentRight="true"></TextView>
            </RelativeLayout>
            <RelativeLayout android:id="@+id/relativeLayout4" android:layout_width="wrap_content" android:layout_height="wrap_content">
                 <TextView android:id="@+id/textView3" android:layout_height="wrap_content" android:layout_width="wrap_content" android:text="Task Status: "></TextView>
                 <TextView android:layout_height="wrap_content" android:layout_width="wrap_content" android:id="@+id/taskStatus" android:text="" android:layout_alignParentRight="true"></TextView>
            </RelativeLayout>
            <RelativeLayout android:id="@+id/relativeLayout3" android:layout_width="wrap_content" android:layout_height="wrap_content">
                 <TextView android:id="@+id/textView5" android:layout_height="wrap_content" android:layout_width="wrap_content" android:text="Task Type: "></TextView>
                 <TextView android:layout_height="wrap_content" android:layout_width="wrap_content" android:id="@+id/taskType" android:text="" android:layout_alignParentRight="true"></TextView>
            </RelativeLayout>
            <RelativeLayout android:id="@+id/relativeLayout2" android:layout_width="wrap_content" android:layout_height="wrap_content">
                 <TextView android:id="@+id/textView7" android:layout_height="wrap_content" android:layout_width="wrap_content" android:text="Task Duration: "></TextView>
                 <TextView android:layout_height="wrap_content" android:layout_width="wrap_content" android:id="@+id/duration" android:text="" android:layout_alignParentRight="true"></TextView>
            </RelativeLayout>
            <RelativeLayout android:id="@+id/relativeLayout7" android:layout_width="wrap_content" android:layout_height="wrap_content">
                 <TextView android:id="@+id/textStart" android:layout_height="wrap_content" android:layout_width="wrap_content" android:text="Task Accepted on: "></TextView>
                 <TextView android:layout_height="wrap_content" android:layout_width="wrap_content" android:id="@+id/start" android:text="" android:layout_alignParentRight="true"></TextView>
            </RelativeLayout>
            <RelativeLayout android:id="@+id/relativeLayout8" android:layout_width="wrap_content" android:layout_height="wrap_content">
                 <TextView android:id="@+id/textElapsed" android:layout_height="wrap_content" android:layout_width="wrap_content" android:text="Task Elapsed Time: "></TextView>
                 <TextView android:layout_height="wrap_content" android:layout_width="wrap_content" android:id="@+id/elapsed" android:text="" android:layout_alignParentRight="true"></TextView>
            </RelativeLayout>
            <RelativeLayout android:id="@+id/relativeLayout6" android:layout_width="wrap_content" android:layout_height="wrap_content">
                 <TextView android:id="@+id/taskDescTextView" android:layout_height="wrap_content" android:layout_width="wrap_content" android:text="Task Description: "></TextView>
            </RelativeLayout>
            <TextView android:layout_height="wrap_content" android:layout_width="wrap_content" android:id="@+id/taskDescription" android:text="" android:layout_alignParentRight="true"></TextView>
