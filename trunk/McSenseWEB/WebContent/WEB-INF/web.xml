<?xml version="1.0" encoding="UTF-8"?>
<web-app id="WebApp_ID" version="2.4" xmlns="http://java.sun.com/xml/ns/j2ee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://java.sun.com/xml/ns/j2ee http://java.sun.com/xml/ns/j2ee/web-app_2_4.xsd">
	<display-name>McSenseWEB</display-name>
	<servlet>
		<description>
		Handles client requests</description>
		<display-name>ClientServlet</display-name>
		<servlet-name>ClientServlet</servlet-name>
		<servlet-class>
		com.mcsense.servlet.ClientServlet</servlet-class>
	</servlet>
	<servlet>
		<description>
		Handles the providers read requests</description>
		<display-name>ProviderServlet</display-name>
		<servlet-name>ProviderServlet</servlet-name>
		<servlet-class>
		com.mcsense.servlet.ProviderServlet</servlet-class>
	</servlet>
	<servlet-mapping>
		<servlet-name>ClientServlet</servlet-name>
		<url-pattern>/pages/ClientServlet</url-pattern>
	</servlet-mapping>
	<servlet-mapping>
		<servlet-name>ProviderServlet</servlet-name>
		<url-pattern>/pages/ProviderServlet</url-pattern>
	</servlet-mapping>
	<welcome-file-list>
		<welcome-file>index.html</welcome-file>
		<welcome-file>index.htm</welcome-file>
		<welcome-file>index.jsp</welcome-file>
		<welcome-file>default.html</welcome-file>
		<welcome-file>default.htm</welcome-file>
		<welcome-file>default.jsp</welcome-file>
	</welcome-file-list>
</web-app>
